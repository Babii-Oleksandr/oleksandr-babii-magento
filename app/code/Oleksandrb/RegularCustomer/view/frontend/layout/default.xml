<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="footer_links">
            <block class="Magento\Sales\Block\Guest\Link"
                   name="regular-customer-form-page"
            >
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Regular customer form</argument>
                    <argument name="path" xsi:type="string">regular-customer/request/form</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="top.links">
            <block class="Oleksandrb\RegularCustomer\Block\Account\SortTopLink" name="custom-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">My Requests</argument>
                    <argument name="path" xsi:type="string" translate="true">regular-customer/request/view/</argument>
                    <argument name="sortOrder" xsi:type="number">60</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
