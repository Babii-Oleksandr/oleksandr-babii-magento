      layout="1column"
>
    <body>
        <referenceContainer name="page.wrapper">
            <block class="Magento\Framework\View\Element\Template"
                   name="demo.page.block"
                   template="Oleksandrb_Cms::demo_block.phtml"
                   before="-"
            >
                <arguments>
                    <argument name="demo_text_default" xsi:type="string" translate="true">This is a demo store by Oleksandrb for DV.Campus. Orders will not be accepted!
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
